<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_Open_Activity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity #2"
        android:textSize="25sp"
        android:padding="20dp"
        android:backgroundTint="@color/black"/>
    <Button
        android:id="@+id/btn_Open_Activity3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity #3 - as Dialog"
        android:textSize="25sp"
        android:padding="20dp"
        android:backgroundTint="#00BCD4"/>
    <Button
        android:id="@+id/btn_Open_Activity4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#4 - Send Data"
        android:textSize="25sp"
        android:padding="20dp"
        android:backgroundTint="#F6B452"/>
    <EditText
        android:id="@+id/edt_Numb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a number"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/btn_Open_Activity5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#5 - Send-Recieve Data"
        android:textSize="25sp"
        android:padding="20dp"
        android:backgroundTint="#4CAF50"/>
    <TextView
        android:id="@+id/txt_Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00"
        android:textSize="26sp"
        android:layout_marginTop="20dp"/>


</LinearLayout>