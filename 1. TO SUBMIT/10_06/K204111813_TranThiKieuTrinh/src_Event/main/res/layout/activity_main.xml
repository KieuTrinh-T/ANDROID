<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="On Click"
        android:textSize="24sp"
        android:backgroundTint="@color/black"
        android:onClick="showToast"/>
    <Button
        android:id="@+id/btnAnonymous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anonymous"
        android:textSize="24sp"
        android:backgroundTint="#ff5722" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnVar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Var1"
            android:textSize="24sp"
            android:backgroundTint="#03A9F4"
            android:layout_marginEnd="10dp" />
        <Button
            android:id="@+id/btnVar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Var2"
            android:textSize="24sp"
            android:backgroundTint="#1094AC" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnAct1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Act 1"
            android:textSize="24sp"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="10dp" />
        <Button
            android:id="@+id/btnAct2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Act 2"
            android:textSize="24sp"
            android:backgroundTint="#146318" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnExplicitClass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exp1"
            android:textSize="24sp"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="10dp" />
        <Button
            android:id="@+id/btnExplicitClass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exp2"
            android:textSize="24sp"
            android:backgroundTint="#146318" />
    </LinearLayout>

</LinearLayout>